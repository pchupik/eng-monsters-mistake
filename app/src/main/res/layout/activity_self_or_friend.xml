<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/text_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="або"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_medium_x3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/for_me_button"
        android:layout_width="325dp"
        android:layout_height="109dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_bg_res"
        android:text="собі"
        android:paddingEnd="100dp"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/text_or"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"

        android:elevation="10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/button_self_icon"
        app:layout_constraintBottom_toBottomOf="@+id/for_me_button"
        app:layout_constraintEnd_toEndOf="@+id/for_me_button"
        app:layout_constraintTop_toTopOf="@+id/for_me_button" />

    <Button
        android:id="@+id/for_friend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_bg_ripple_vec"
        android:text="другу"
        android:paddingEnd="100dp"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_or" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"

        android:elevation="10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/button_friend_icon"
        app:layout_constraintBottom_toBottomOf="@+id/for_friend_button"
        app:layout_constraintEnd_toEndOf="@+id/for_friend_button"
        app:layout_constraintTop_toTopOf="@+id/for_friend_button" />

</androidx.constraintlayout.widget.ConstraintLayout>